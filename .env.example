# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
# For local development with Docker: postgresql://flight_user:flight_password@localhost:5432/flight_booking?schema=public
# For production: Use your cloud database provider's connection string
DATABASE_URL="postgresql://flight_user:flight_password@localhost:5432/flight_booking?schema=public"

# =============================================================================
# REDIS CONFIGURATION (Session Management)
# =============================================================================
# Redis connection URL for session storage
# For local development with Docker: redis://localhost:6379
# For production: Use your Redis provider's connection string (e.g., Redis Cloud, AWS ElastiCache)
REDIS_URL="redis://localhost:6379"

# =============================================================================
# STRIPE PAYMENT CONFIGURATION
# =============================================================================
# Stripe publishable key (client-side, safe to expose)
# Get from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"

# Stripe secret key (server-side only, keep secure)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"

# Stripe webhook secret for payment verification
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"

# =============================================================================
# RAZORPAY PAYMENT CONFIGURATION (Alternative to Stripe)
# =============================================================================
# Razorpay key ID (client-side, safe to expose)
# Get from: https://dashboard.razorpay.com/app/keys
NEXT_PUBLIC_RAZORPAY_KEY_ID="rzp_test_your_razorpay_key_id"

# Razorpay key secret (server-side only, keep secure)
# Get from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_SECRET="your_razorpay_key_secret"

# =============================================================================
# SENDGRID EMAIL CONFIGURATION
# =============================================================================
# SendGrid API key for sending transactional emails
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY="SG.your_sendgrid_api_key"

# Email address to send emails from (must be verified in SendGrid)
SENDGRID_FROM_EMAIL="noreply@yourdomain.com"

# Optional: Email address for support/contact
SENDGRID_SUPPORT_EMAIL="support@yourdomain.com"

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Public URL of your application
# For local development: http://localhost:3000
# For production: https://yourdomain.com
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Application environment (development, staging, production)
NODE_ENV="development"

# =============================================================================
# OPTIONAL: LOGGING AND MONITORING
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL="info"

# =============================================================================
# OPTIONAL: SECURITY
# =============================================================================
# Secret key for session encryption (generate a random string)
# Generate with: openssl rand -base64 32
SESSION_SECRET="your_session_secret_key_here"

# JWT secret for authentication tokens (generate a random string)
# Generate with: openssl rand -base64 32
JWT_SECRET="your_jwt_secret_key_here"

# CORS allowed origins (comma-separated list)
# For production, specify your frontend domains
CORS_ORIGINS="http://localhost:3000,https://yourdomain.com"

# =============================================================================
# OPTIONAL: FEATURE FLAGS
# =============================================================================
# Enable/disable specific payment providers
ENABLE_STRIPE="true"
ENABLE_RAZORPAY="true"

# Enable/disable email notifications
ENABLE_EMAIL_NOTIFICATIONS="true"

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Enable debug mode (shows detailed error messages)
DEBUG="false"

# Skip email sending in development (logs to console instead)
SKIP_EMAIL_SENDING="false"
